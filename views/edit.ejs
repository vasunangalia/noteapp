<% include ./partials/header %>
<div class="ui main text container segment">
    <div  class="ui huge header"> Edit <%= note.title %></div>
    <form class="ui form" action="/notes/<%= note._id %>?_method=PUT" method="POST">
        <div class="field">
            <lable>Title</lable>
            <input type="text" name="note[title]" value="<%= note.title %>">
        </div>
         <div class="field">
            <lable>Note content</lable>
            <textarea name="note[body]"><%= note.body %></textarea>
        </div>
        <input class="ui violet basic button" type="submit">
    </form>
    <div>
            <a class="ui floated inverted green button" href="/notes/<%= note._id %>/attachments/new">
                        Add attachments
                        <i class="right chevron icon"></i>
                    </a>
                </div>
                 <div>
                      <a class="ui floated inverted green button" href="/notes/<%= note._id %>/reminder/new">
                        Add Reminder
                        <i class="right chevron icon"></i>
                    </a>
                </div>
</div>